{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "jsx": "react",
    "baseUrl": ".",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/index.ts", "src/generated"]
}
